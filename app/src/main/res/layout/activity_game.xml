<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ryan.mygame.Game"
    android:background="@mipmap/galaxy">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ryan&apos;s Game v0.01"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="Start"
        android:id="@+id/button"
        android:layout_marginTop="43dp"
        android:typeface="normal"
        android:nestedScrollingEnabled="false"
        android:onClick="startButtonOnClick"
        android:layout_below="@+id/textView"
        android:textColor="@color/accent_material_dark"
        android:textStyle="bold"
        android:background="@mipmap/galaxy" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="Close"
        android:typeface="normal"
        android:nestedScrollingEnabled="false"
        android:textColor="@color/accent_material_dark"
        android:id="@+id/button2"
        android:onClick="closeButtonOnClick"
        android:layout_below="@+id/button"
        android:background="@mipmap/galaxy" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:src="@mipmap/galaxy"
        android:rotation="270"
        android:background="#0b332c"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />


</RelativeLayout>
